<div class="peepsCorral">
  <h3>
    <%= @user.username %>'s followers
  </h3>

  <% if @user.followed.length != 0 %>
    <% @user.followed.each do |f| %>
      <div class="avatarSmall">
        <%= image_tag f.avatar.url.to_s %>
      </div>

      <div class="peeps">
        <%= link_to f.username, user_path(f.id) %>
      </div>

      <p>
        <%= render partial: 'shared/follow', locals:{f: f} %>
      </p>
    <% end %>
  <% else %>
    <p>
      <%= @user.username %> doesn't have any followers!
    </p>
  <% end %>
</div>
